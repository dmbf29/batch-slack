<div class="d-flex">
  <%= render 'batches/list', batches: @batches, selected_batch: @batch %>
  <div class="container chatroom">
    <%= render 'batches/header', batch: @batch %>
    <%= turbo_stream_from "batch_#{@batch.id}_messages" %>
    <div id='messages' class="messages">
      <% @batch.messages.each do |message| %>
        <%= render 'messages/message', message: message %>
      <% end %>
    </div>
    <%= simple_form_for [@batch, @message], html: {class: "d-flex"} do |f| %>
      <%= f.input :content, label: false, placeholder: "Message ##{@batch.number}", wrapper_html: {class: "flex-grow-1"} %>
      <%= f.submit "Send", class: "btn btn-primary mb-3" %>
    <% end %>
  </div>
</div>
