<div class="d-flex">
  <%= render 'batches/list', batches: @batches, selected_batch: @batch %>
  <%= turbo_frame_tag :batch_details, class: 'w-100' do %>
    <div class="container chatroom">
      <%= render 'batches/header', batch: @batch %>
      <!-- This starting the "listening", we are waiting for messages to be broadcasted -->
      <%= turbo_stream_from "batch_#{@batch.id}_messages" %>
      <div id='messages' class="messages">
        <% @batch.messages.each do |message| %>
          <%= render 'messages/message', message: message %>
        <% end %>
        <!-- Add any new message inside of this messages div -->
      </div>
      <%= simple_form_for [@batch, @message], html: { class: "d-flex", data: {
      controller: 'reset-form',
      action: "turbo:submit-end->reset-form#reset"

    } } do |f| %>
        <%= f.input :content, label: false, placeholder: "Message ##{@batch.number}", wrapper_html: {class: "flex-grow-1"} %>
        <%= f.submit "Send", class: "btn btn-primary mb-3" %>
      <% end %>
    </div>
  <% end %>
</div>
